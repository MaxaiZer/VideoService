{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    },
    "NLog": {
      "ConfigPath": "nlog.config"
    }
  },
  "AllowedHosts": "*",
  "MinIO": {
    "Endpoint": "minio:9000",
    "AccessKey": "minioadmin",
    "SecretKey": "minioadmin",
    "PublicHost": "localhost/storage",
    "BucketName": "files"
  },
  "MessageBrokerSettings": {
    "Host": "rabbitmq",
    "Username": "rabbitmq",
    "Password": "rabbitmq",
    "VideoProcessingExchangeName" : "video-processing-request"
  },
  "JwtSettings": {
    "ValidIssuer": "MySuperApp",
    "ValidAudience": "MySuperAudience",
    "AccessTokenExpirationMinutes": 15,
    "RefreshTokenExpirationDays": 7
  },
  "ConnectionStrings": {
    "DefaultConnection": "Server=db; Port=5432; Database=video_db;User Id=postgres;Password=postgres;"
  }
}
